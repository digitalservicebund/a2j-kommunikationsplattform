version: ""
scopeconfig:
  - scope: node
allowed_patterns:
  - uses:\ ([A-z0-9\-]+\/)*[A-z0-9\-]+@[a-fA-F0-9]{40}
  - "Secrets\ scan\ :point_right:"
  - TRIVY_PASSWORD:\ \${{\ secrets.GITHUB_TOKEN\ }}
  - password:\ \${{\ secrets.GITHUB_TOKEN\ }}
  - key:\ \${{\ runner.os\ }}-node-\${{\ hashFiles\('[*]{2}/package-lock.json'\)\ }}
  - secrets:\ inherit
